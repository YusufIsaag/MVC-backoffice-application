<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Star Wars Unlimited</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/KE03_INTDEV_SE_2_Base.styles.css" asp-append-version="true" />
    @*Font*@
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    Star Wars Unlimited
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">

                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="d-flex">
        <div class="p-3" style="width: 220px; min-height: 100vh; background-color: var(--dark-blue);">
            <ul class="m-3 nav flex-column">
                <li class="nav-item mb-2">
                    <a class="nav-link sidebar-link d-flex align-items-center" asp-controller="Home" asp-action="Index">
                        <img src="https://www.svgrepo.com/show/491873/home-selected-state.svg" alt="Home" style="width:35px; height:35px; margin-right:8px;">
                          Dashboard
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link sidebar-link d-flex align-items-center" asp-controller="Orders" asp-action="Index">
                        <img src="https://www.svgrepo.com/show/283529/package-box.svg" alt="Products" style="width:24px; height:24px; margin-right:8px;">
                        Orders
                    </a>
                </li>
            </ul>
        </div>

        <div class="flex-grow-1">
            <main role="main" class="m-3 pb-3 ">
                @RenderBody()
            </main>
        </div>
    </div>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted" style="color:white">
        <div class="container">
            &copy; 2025 - Star Wars Unlimited -
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>